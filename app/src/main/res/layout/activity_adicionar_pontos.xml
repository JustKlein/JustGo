<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.justgo.AdicionarPontos">
    <fragment
        android:id="@+id/AdicionarPontosMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Origem"
            android:id="@+id/editAddPonto" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Vizualizar"
            android:onClick="botaoAddPonto"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Vizualizar"
            android:onClick="botaoRemovePonto"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Vizualizar"
            android:onClick="botaoFinalizarPonto"
            />
    </LinearLayout>
</FrameLayout>
