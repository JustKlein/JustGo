<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.justgo.CadastroRota.NovaRota">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:padding="3dp"
        android:gravity="center"
        android:background="@drawable/borda">
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="@string/origem"
            android:id="@+id/origem"
            android:layout_margin="2dp"/>

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="@string/destino"
            android:id="@+id/destino"
            android:layout_margin="2dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_visualizar"
            android:onClick="BuscarOrigemDestino"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_avancar"
            android:onClick="ConfirmarOrigemDestino"/>

    </LinearLayout>
</FrameLayout>
